<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">
	
	<bean id="fileEventLogger" class="com.epam.spring.FileEventLogger" init-method="init">
		<constructor-arg value="SpringCore.log"/>
	</bean>
	
	<bean id="cacheEventLogger" class="com.epam.spring.CacheFileEventLogger" destroy-method="destroy" parent="fileEventLogger">
		<constructor-arg type="int" value="5"/>
		<constructor-arg>
			<bean class="java.util.ArrayList"/>
		</constructor-arg> 
	</bean>	
</beans>