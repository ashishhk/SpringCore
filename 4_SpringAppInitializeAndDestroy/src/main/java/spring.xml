<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">
	
	<bean id="app" class="com.epam.spring.App">
		<constructor-arg ref="client"/>
		<constructor-arg ref="eventLogger"/>
	</bean>
	
	<bean id="client" class="com.epam.spring.Client">
		<constructor-arg index="0" value="1"/>
		<constructor-arg index="1" value="Ashish Dadhore"/>
	</bean>
	
	<bean id="eventLogger" class="com.epam.spring.CacheFileEventLogger" init-method="init" destroy-method="destroy">
		<constructor-arg value="SpringCore.log"/>
		<constructor-arg type="int" value="5"/>
		<constructor-arg>
			<bean class="java.util.ArrayList"/>
		</constructor-arg> 
	</bean>
	
	<!-- by default all beans are singleton and returning new object each time requires scope to set as prototype -->
	<bean id="event" class="com.epam.spring.Event" scope="prototype">
		<!-- Inner bean -->
		<constructor-arg>
			<bean class="java.util.Date"/>
		</constructor-arg>
		<constructor-arg>
			<bean id="dateFormat" class="java.text.DateFormat" factory-method="getDateTimeInstance"/>		
		</constructor-arg>
	</bean>
</beans>